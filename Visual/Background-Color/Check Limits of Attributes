function checkLimitsOfAttributes() {
  if (fluctuationDeterminantList.hue.level < 0) {
    fluctuationDeterminantList.hue.level += 360;
  } else if (fluctuationDeterminantList.hue.level > 360) {
    fluctuationDeterminantList.hue.level -= 360;
  }
  
  if (fluctuationDeterminantList.saturation.level < 0) {
    fluctuationDeterminantList.saturation.level = 0;
  } else if (fluctuationDeterminantList.saturation.level > 100) {
    fluctuationDeterminantList.saturation.level = 100;
  }
  
  if (fluctuationDeterminantList.lightness.level < 0) {
    fluctuationDeterminantList.lightness.level = 0;
  } else if (fluctuationDeterminantList.lightness.level > 100) {
    fluctuationDeterminantList.lightness.level = 100;
  }
}
