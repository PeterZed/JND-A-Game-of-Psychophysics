function checkAttributesLimits() {
  if (determinantList.hue.level < 0) {
    determinantList.hue.level += 360;
  } else if (determinantList.hue.level > 360) {
    determinantList.hue.level -= 360;
  }
  
  if (determinantList.saturation.level < 0) {
    determinantList.saturation.level = 0;
  } else if (determinantList.saturation.level > 100) {
    determinantList.saturation.level = 100;
  }
  
  if (determinantList.lightness.level < 0) {
    determinantList.lightness.level = 0;
  } else if (determinantList.lightness.level > 100) {
    determinantList.lightness.level = 100;
  }
}
