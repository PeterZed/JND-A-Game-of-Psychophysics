function playGame() {
  var backgroundColor = new BackgroundColor();
  var fluctuationFactors = new FluctuationFactors();
  var colorManager = new ColorManager();
  
  colorManager.randomizeColorAttributes(backgroundColor);
  colorManager.setBackgroundColor(backgroundColor);
  
  // For testing, so that clearInterval(colorInterval) can be run as needed
  window.colorInterval = setInterval(colorManager.fluctuateBackgroundColor.bind(colorManager,
    fluctuationFactors, backgroundColor), fluctuationFactors.time.waitTimeMean);
}
